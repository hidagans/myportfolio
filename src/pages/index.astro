---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard';
import BlogCard from '../components/BlogCard';

// Static data for Netlify deployment
const projects = [
  {
    id: 1,
    title: "Portfolio Website",
    description: "A modern portfolio website built with Astro and React",
    image: "/images/placeholder.jpg",
    link: "https://github.com/hidagans",
    tags: "Astro,React,TailwindCSS"
  },
  {
    id: 2,
    title: "Blog Platform",
    description: "A full-featured blog platform with admin panel",
    image: "/images/placeholder.jpg",
    link: "https://github.com/hidagans",
    tags: "Node.js,MySQL,Express"
  }
];

const posts = [
  {
    id: 1,
    title: "Getting Started with Astro",
    content: "Learn how to build modern websites with Astro framework...",
    image: "/images/placeholder.jpg",
    created_at: new Date().toISOString()
  },
  {
    id: 2,
    title: "Web Development Best Practices",
    content: "Explore the latest trends and best practices in web development...",
    image: "/images/placeholder.jpg",
    created_at: new Date().toISOString()
  }
];

const skills = [
  { name: 'Frontend', items: ['React', 'Vue', 'TypeScript', 'Tailwind CSS'] },
  { name: 'Backend', items: ['Node.js', 'Python', 'PostgreSQL', 'MongoDB'] },
  { name: 'Tools', items: ['Git', 'Docker', 'AWS', 'Figma'] }
];

const socials = [
  { name: 'GitHub', icon: 'github', url: 'https://github.com/hidagans' },
  { name: 'Telegram', icon: 'telegram', url: 'https://t.me/IamYourMajesty' }
];
---

<Layout title="Portfolio - Home">
  <main>
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center relative">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 to-black"></div>
      <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
          Putra Yeari
        </h1>
        <p class="text-2xl text-purple-400 mb-4">Majesty Yeari</p>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Building beautiful and functional web experiences with modern technologies
        </p>
        <div class="flex items-center justify-center gap-4">
          <a
            href="#about"
            class="px-8 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors"
          >
            About Me
          </a>
          <a
            href="https://github.com/hidagans"
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-3 bg-white/10 backdrop-blur-sm text-white rounded-lg hover:bg-white/20 transition-colors"
          >
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              GitHub
            </span>
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-black/80">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
            <img
              src="/images/profile.jpg"
              alt="Putra Yeari"
              class="relative w-full h-[500px] object-cover rounded-lg"
            />
          </div>
          <div>
            <h2 class="text-3xl font-bold text-white mb-6">About Me</h2>
            <p class="text-gray-300 mb-8">
              Hi, I'm Putra Yeari (also known as Majesty Yeari), a passionate full-stack developer with a keen eye for design and a love for creating seamless user experiences. With years of experience in web development, I specialize in building modern, responsive, and scalable applications that make a difference.
            </p>
            
            <div class="mb-8">
              <h3 class="text-xl font-semibold text-white mb-4">Skills & Expertise</h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {skills.map(category => (
                  <div class="bg-white/5 backdrop-blur-sm rounded-lg p-4">
                    <h4 class="text-purple-400 font-medium mb-2">{category.name}</h4>
                    <ul class="space-y-1">
                      {category.items.map(skill => (
                        <li class="text-gray-300">{skill}</li>
                      ))}
                    </ul>
                  </div>
                ))}
              </div>
            </div>

            <div class="flex gap-4">
              {socials.map(social => (
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-white transition-colors"
                  aria-label={`Visit ${social.name}`}
                >
                  {social.icon === 'github' && (
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  )}
                  {social.icon === 'telegram' && (
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 8.221l-1.97 9.28c-.145.658-.537.818-1.084.508l-3-2.21-1.446 1.394c-.14.18-.357.223-.548.223l.188-2.85 5.18-4.68c.223-.198-.05-.308-.346-.11l-6.4 4.02-2.76-.918c-.6-.183-.612-.6.125-.89l10.782-4.156c.5-.183.94.114.78.89z"/>
                    </svg>
                  )}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20 bg-black">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-white mb-12 text-center">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map((project) => (
            <ProjectCard
              client:load
              title={project.title}
              description={project.description}
              image={project.image}
              link={project.link}
              tags={project.tags.split(',')}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Blog Section -->
    <section class="py-20 bg-black/90">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-white mb-12 text-center">Latest Blog Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <BlogCard
              client:load
              title={post.title}
              excerpt={post.content}
              image={post.image}
              date={new Date(post.created_at).toLocaleDateString()}
              slug={post.id.toString()}
            />
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
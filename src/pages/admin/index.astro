---
import Layout from '../../layouts/Layout.astro';
import { isLoggedIn } from '../../utils/auth';

if (!await isLoggedIn(Astro)) {
  return Astro.redirect('/admin/login');
}
---

<Layout title="Admin Dashboard">
  <main class="min-h-screen bg-gray-900 pt-20">
    <div class="container mx-auto px-6 py-8">
      <h1 class="text-3xl font-bold text-white mb-8">Admin Dashboard</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <a
          href="/admin/projects"
          class="block p-6 bg-white/5 backdrop-blur-lg rounded-xl hover:bg-white/10 transition-colors"
        >
          <h2 class="text-xl font-bold text-white mb-2">Manage Projects</h2>
          <p class="text-gray-300">Add, edit, or remove portfolio projects</p>
        </a>
        
        <a
          href="/admin/blog"
          class="block p-6 bg-white/5 backdrop-blur-lg rounded-xl hover:bg-white/10 transition-colors"
        >
          <h2 class="text-xl font-bold text-white mb-2">Manage Blog Posts</h2>
          <p class="text-gray-300">Create and manage your blog content</p>
        </a>
      </div>
    </div>
  </main>
</Layout>